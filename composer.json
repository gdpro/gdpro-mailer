{
    "name": "gdpro/gdpro-mailer",
    "description": "Mailer module to manage mailer, message, smtp, logger, jobs",
    "license": "MIT",
    "authors":[
        {
            "name":"Gary Gitton",
            "email": "info@gary.pro",
            "homepage":"http://www.gary.pro/"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5.8",
        "zendframework/zend-mail": "^2.7",
        "zendframework/zend-view": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3",
        "squizlabs/php_codesniffer": "^2.2",
        "gdpro/gdpro-monolog": "^1.0",
        "container-interop/container-interop": "^1.1",
        "zendframework/zend-modulemanager": "^2.7",
        "zendframework/zend-console": "^2.6",
        "slm/queue": "^0.6"
    },
    "suggest": {
        "gdpro/gdpro-monolog": "(^1.0) Log your mailer activity",
        "slm/queue-sqs": "(^0.3) Send your mail later by placing them in a queue"
    },
    "autoload": {
        "psr-4": {
            "GdproMailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GdproMailerTest\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
